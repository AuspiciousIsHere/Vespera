{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true, // we use ts-node or similar, no build step needed
    "jsx": "react-jsx", // ‚Üê This is key! Enables JSX in .tsx files
    "baseUrl": ".",
    "paths": {
      "*": ["./server/*"]
    }
  },
  "include": ["server/**/*", "emails/**/*"],
  "exclude": ["node_modules"]
}
